    @if (User.Identity.IsAuthenticated)

    {


        <div class=" container" style="margin-top:50px">
            <div>
                <nav class="navbar navbar-light" style="background-color: #e3f2fd; color:darkred">
                    Book Reading Event

                    <div class="navbar-expand" id="navbarNav">

                        <ul class="navbar-nav">
                            <li class="navbar navbar-light" style="background-color: #e3f2fd;">
                                <a class="nav-link" style="color:black" asp-action="MyEvents" asp-controller="LoggedIn">My Events<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="navbar navbar-light" style="background-color: #e3f2fd;">
                                <a class="nav-link" style="color:black" asp-action="EventsInvitedTo" asp-controller="LoggedIn">Events Invited To<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="navbar navbar-light" style="background-color: #e3f2fd;">
                                <a class="nav-link" asp-action="CreateEvent" asp-controller="LoggedIn" style="color:black">Create Event<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="navbar navbar-light" style="background-color: #e3f2fd; ">
                                <a class="nav-link" asp-action="Logout" asp-controller="Account" style="color:black">Logout<span class="sr-only">(current)</span></a>
                            </li>


                        </ul>
                    </div>
                </nav>

            </div>

        </div>



        <div class="row">
            <div class="col-sm-6">
                @if (Model.Count() > 0)
                {
                    <table id="pastEvents" class="table-bordered table table-striped" title="Past Events">
                        <thead class="table-dark" id="past">
                            <tr>
                                <th>Past Events</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Date < DateTime.Now)
                                {
                                    <tr>
                                        <td>@Html.ActionLink(item.Title, "EventInfo", "EventInformation", new { title = item.Title })</td>
                                    </tr>

                                }
                            }
                        </tbody>


                    </table>

                }


            </div>




            <div class="col-sm-6">
                @if (Model.Count() > 0)
                {
                    <table id="upcomingEvents" class="table-bordered table table-striped" title="Upcoming Events">
                        <thead class="table-dark" id="upcoming">
                            <tr>
                                <th>Upcoming Events</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)

                            {
                                if (item.Date > DateTime.Now)
                                {
                                    <tr>
                                        <td>@Html.ActionLink(item.Title, "EventInfo", "EventInformation", new { title = item.Title }) </td>
                                    </tr>

                                }



                            }
                        </tbody>


                    </table>

                }
                else
                {
                    <p> No Upcoming Events</p>
                }


            </div>
        </div>
















