@model MVCAssignment.Models.SignupUserViewModel;


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
</head>
<body>
    <div class="container">
        <div class="row " style="margin-top:50px" >
            <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5" >
                <div class="text-center">
                    <h1 class="text-info">Registration</h1>
                </div>
                <h3 class="text-danger text-center">@TempData["errorMessage"]</h3> 
                <form method="post" asp-action="SignUp">
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input type="text" asp-for="FullName" placeholder="Enter FullName" class="form-control" autocomplete="off" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="text" asp-for="Email" placeholder="Enter Email" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" autocomplete="off" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>


                    @*<div class="form-group">
                        <label asp-for="IsActive"></label>
                        <input type="checkbox" checked="checked" asp-for="IsActive" />
                    </div>*@

                    <div class="form-group">
                        <input type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Register" />
                    </div>
                    
                    <div class="form-group">
                        <a  class="btn btn-danger btn-lg mb-1 float-left" asp-action="Index" asp-controller="Home">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>



</body>
</html>
