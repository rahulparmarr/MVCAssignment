@model MVCAssignment.Models.LoginSignupViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-lg-5" >
        <div class="col-4 offset-4 border border-primary rounded pl-5 pr-5 pb-5" >
            

            <h6 class="text-success text-center">@TempData["successMessage"]</h6>
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" placeholder="Enter Email" class="form-control" autocomplete="off" />

                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" autocomplete="off" />
                    <span class="text-danger">@TempData["errorMessage"]</span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary mb-2" value="Log In" />
                </div>
                
                <div class="row">
                    <div class="form-group col-6">
                        <a class="btn btn-danger  mb-2 float-lg-none" asp-action="Index" asp-controller="Home">Back</a>
                    </div>
                    <div class="form-group col-6">
                        <a class="text-light btn btn-dark float-right font-weight-bold" asp-action="Signup" asp-controller="Account">Register</a>
                    </div>
                </div>
                

            </form>
        </div>
    </div>
</div>

